<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_15" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_15" />

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toTopOf="@id/view_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_5"
        android:text="鼎典"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toTopOf="@id/view_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25"
        android:text="1天前"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toTopOf="@id/view_title" />

    <TextView
        android:id="@+id/tv_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="规格规格规格规格规格规格规格规格规格规格规格规格规格规格规格规格规格"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toBottomOf="@+id/view_title" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_spec" />

    <ImageView
        android:id="@+id/iv_imgs"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/logo"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="回复"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintTop_toBottomOf="@+id/iv_imgs" />


    <View
        android:id="@+id/view_reply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/line_reply"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        android:background="@color/color_cc"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply" />

    <ImageView
        android:id="@+id/iv_reply"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/logo"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/view_reply"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鼎典回复"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/view_reply"
        app:layout_constraintTop_toTopOf="@id/iv_reply"
        app:layout_constraintBottom_toBottomOf="@+id/iv_reply"
        android:layout_marginStart="@dimen/dp_35"/>

    <TextView
        android:id="@+id/tv_reply_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintTop_toBottomOf="@+id/iv_reply"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_35"
        android:text="回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容回复内容"/>

    <View
        android:id="@+id/line_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply_content" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/view_reply" />


</androidx.constraintlayout.widget.ConstraintLayout>