<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_parent"
    android:background="@color/black_33"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_15" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_15" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"/>

   <TextView
       android:id="@+id/tv_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="动物饲养任务"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@+id/view_1"
       android:layout_marginTop="@dimen/dp_20"/>

    <View
        android:id="@+id/view_sign"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:background="@color/color_cc"
        android:layout_marginTop="@dimen/dp_20"/>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/logo"
        app:layout_constraintTop_toTopOf="@id/view_sign"
        app:layout_constraintBottom_toBottomOf="@id/view_sign"
        app:layout_constraintStart_toStartOf="@id/view_sign"
        android:layout_marginStart="@dimen/dp_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日签到"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/view_sign"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看视频获得1支疫苗"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/view_sign"
        android:layout_marginTop="@dimen/dp_44"/>

    <TextView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:text="立即签到"
        app:layout_constraintEnd_toEndOf="@id/view_sign"
        app:layout_constraintTop_toTopOf="@id/view_sign"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view_sign"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/btn_1c81e9_r40"
        android:textColor="@color/white"/>


    <View
        android:id="@+id/view_task"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"
        app:layout_constraintTop_toBottomOf="@+id/view_sign"
        android:background="@color/color_cc"
        android:layout_marginTop="@dimen/dp_20"/>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/logo"
        app:layout_constraintTop_toTopOf="@id/view_task"
        app:layout_constraintBottom_toBottomOf="@id/view_task"
        app:layout_constraintStart_toStartOf="@id/view_task"
        android:layout_marginStart="@dimen/dp_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日任务"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/view_task"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浏览激励视频获取肥料0/5"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/gl_start_15"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/view_task"
        android:layout_marginTop="@dimen/dp_44"/>

    <TextView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:text="做任务"
        app:layout_constraintEnd_toEndOf="@id/view_task"
        app:layout_constraintTop_toTopOf="@id/view_task"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view_task"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/btn_1c81e9_r40"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>