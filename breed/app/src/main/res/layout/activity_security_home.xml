<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_15" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_15" />

    <View
        android:id="@+id/view_modify_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改登录密码"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_modify_login"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify_login"/>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintTop_toTopOf="@+id/view_modify_login"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify_login"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"/>

    <View
        android:id="@+id/view_modify_capital"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_modify_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置资金密码"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_modify_capital"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify_capital"/>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintTop_toTopOf="@+id/view_modify_capital"
        app:layout_constraintBottom_toBottomOf="@+id/view_modify_capital"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"/>

    <View
        android:id="@+id/view_authentication"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_modify_capital"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_authentication"
        app:layout_constraintBottom_toBottomOf="@+id/view_authentication"/>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintTop_toTopOf="@+id/view_authentication"
        app:layout_constraintBottom_toBottomOf="@+id/view_authentication"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"/>

    <View
        android:id="@+id/view_address"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_authentication"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_address"
        app:layout_constraintBottom_toBottomOf="@+id/view_address"/>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintTop_toTopOf="@+id/view_address"
        app:layout_constraintBottom_toBottomOf="@+id/view_address"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"/>

    <View
        android:id="@+id/view_account_number"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收款账号设置"
        app:layout_constraintStart_toStartOf="@+id/gl_start_15"
        app:layout_constraintTop_toTopOf="@+id/view_account_number"
        app:layout_constraintBottom_toBottomOf="@+id/view_account_number"/>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/ic_next2"
        app:layout_constraintTop_toTopOf="@+id/view_account_number"
        app:layout_constraintBottom_toBottomOf="@+id/view_account_number"
        app:layout_constraintEnd_toEndOf="@id/gl_end_15"/>

</androidx.constraintlayout.widget.ConstraintLayout>